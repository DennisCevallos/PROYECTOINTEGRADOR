@model IEnumerable<Entidades.Negocio.ItemMenu>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Menu
            </th>
            <th>
               Perfil
            </th>
            <th>
               Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPerfil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSubMenu">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSubMenu">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
